@model havhavli.Models.ShoppingCart

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ShoppingCart</h4>
    <table class="table-striped styleTable">
        <thead>
            <tr>
                <th>
                    <div>Cart Id</div>
                </th>
                <th>
                    <div>User Name</div>
                </th>
                <th>
                    <div>Total Price</div>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => model.User.Username)
                </td>
                <td>
                    @Html.DisplayFor(model => model.TotalPrice)
                </td>
            </tr>
        </tbody>
    </table>
    <table>
        <thead>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                </tr>
            }
        </thead>
    </table>
    <p>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">עדכן עגלה</a>
        <a class="btn btn-secondary" asp-action="Index">חזור לעגלה</a>
    </p>
</div>