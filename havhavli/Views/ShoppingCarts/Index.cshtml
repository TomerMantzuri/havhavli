@model IEnumerable<havhavli.Models.ShoppingCart>

@{
    ViewData["Title"] = "עגלות";
}

<h1>רשימת עגלות פתוחות</h1>
<table class="table-striped styleTable">
    <thead cellspacing="40">
        <tr>
            <th>
                <div></div>
            </th>
            <th></th>
            <th>
                <div>לקוח</div>
            </th>
            <th>
                <div>סך לתשלום</div>
            </th>
            <th></th>
            <th>
                <div class="text-center">מוצרים</div>
            </th>
            <th>
                סה"כ
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td></td>
            <td>
                @foreach (var i in item.Products)
                {
                    @Html.DisplayFor(modelItem => i.Name)
                    <br />
                }
            </td>
            <td>
                @foreach (var i in item.Products)
                {
                    @Html.DisplayFor(modelItem => i.QuantityInCart)
                    <br />
                }
</tr>
        }
    </tbody>


</table>
