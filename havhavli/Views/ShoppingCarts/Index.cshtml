@model IEnumerable<havhavli.Models.ShoppingCart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table-striped styleTable">
    <thead>
        <tr>
            <th>
                <div>Cart Id</div>
            </th>
            <th>
                <div>User Name</div>
            </th>
            <th>
                <div>Total Price</div>
            </th>
            <th>
                <div>Products</div>
            </th>
            <th>
                <div>Number of Products</div>
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @foreach (var i in item.Products)
                    {
                        @Html.DisplayFor(modelItem => i.Name) <br />}
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Products.Count)
                </td>

                <td>
                    <div class="btn-group">
                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>


</table>
