@model havhavli.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="card-container">
        <h1 class="text-light">@Html.DisplayFor(model => model.Name)</h1>
        <br />
        <div>
            <h6 class="card-title-style"> תיאור:</h6>  @Html.DisplayFor(model => model.Description)
        </div>
        <div>
            <h6 class="card-title-style"> קטגוריה:</h6>
            <a class="btn btn-link" href="javascript:history.back()">@Html.DisplayFor(model => model.category.name)</a>
        </div>
        <div>
            <h6 class="card-title-style"> מחיר:</h6>  @Html.DisplayFor(model => model.Price)
        </div>
        <hr />
        <form asp-controller="ShoppingCarts" asp-action="AddToCart" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-outline-success card-background">
                הוסף לעגלת הקניות
            </button>
        </form>
    </div>
</div>
