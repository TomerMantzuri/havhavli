<!DOCTYPE html>
<html dir="rtl" lang="he">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoginSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">הב-הב לי 🐕🐈</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a style="color: white" class="btn dropdown-toggle text-Light" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                מוצרי החנות ‍
                            </a>
                            <ul class="dropdown-menu" style="background-color:black">
                                <li class="text-center"><a class="dropdown-item; text-light" href="/Products/Category/1">מוצרים לכלבים</a></li>
                                <li class="text-center"><a class="dropdown-item; text-light" href="/Products/Category/2">מוצרים לחתולים</a></li>
                                <li class="text-center"><a class="dropdown-item; text-light" href="/Products/Category/3">מוצרים לדגים</a></li>
                                <li class="text-center"><a class="dropdown-item; text-light" href="\Products\Index">כל המוצרים</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">אודותינו</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
