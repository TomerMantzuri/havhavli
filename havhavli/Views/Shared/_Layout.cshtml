<!DOCTYPE html>
<html dir="rtl" lang="he">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - havhavli</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">הב-הב לי 🐕🐈 </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-sm-start">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Products" asp-action="Index">מוצרי החנות</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">אודותינו</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ShoppingCarts" asp-action="MyCart">
                                עגלת הקניות שלי
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
                                </svg>
                            </a>
                        </li>
                        @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="Logout">התנתק</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Users" asp-action="Login">התחבר</a>
                            </li>
                        }
                        @if (Context.User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a style="color: white" class="btn dropdown-toggle; text-black" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                                    מנהלים🤵🏼‍
                                </a>
                                <ul class="dropdown-menu" style="background-color:black">
                                    <li class="text-center"><a class="dropdown-item; text-light" href="\Categories\Index">קטגוריות</a></li>
                                    <li class="text-center"><a class="dropdown-item; text-light" href="\Suppliers\Index">ספקים</a></li>
                                    <li class="text-center"><a class="dropdown-item; text-light" href="\Products\Statistics">סטטיסטיקה</a></li>
                                    <li class="text-center"><a class="dropdown-item; text-light" href="\ShoppingCarts\Index">הצג עגלות פתוחות</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v7.0"></script>
            <div class=" p-t-8 p-b-31" style="color:aliceblue">
                <a href="#">
                    <div class="fb-like" data-href="https://www.facebook.com/HavhavLi-189481293143653" data-width="" data-action="like" data-size="small" data-share="true"></div>
                </a>
            </div>
        </nav>
    </header>
       @RenderBody()

<footer class="border-top footer bg-dark">
    <div class="container text-white">
        &copy; 2021 - הב-הב לי - <a style="color:antiquewhite" asp-area="" asp-controller="Home" asp-action="About">אודותינו</a>   |
        <a style="color:antiquewhite" asp-area="" asp-controller="Branches" asp-action="Index">הסניפים שלנו</a>   |
        <a style="color:antiquewhite" asp-area="" asp-controller="Home" asp-action="Contact">צור קשר</a>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
