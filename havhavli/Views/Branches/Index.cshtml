@model IEnumerable<havhavli.Models.Branch>

@{
    ViewData["Title"] = "הסניפים שלנו";
}

<h1 class="text-center head-of-page">הסניפים שלנו</h1>
@if (Context.User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">הוסף סניף</a>
    </p>
}
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card col-3">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"> כתובת החנות: @item.Address</p>
                    <p class="card-text"> טל: @item.PhoneNumber</p>
                    <p class="card-text"> שעות פעילות: @item.OpeningHours</p>
                </div>
                @if (Context.User.IsInRole("Admin"))
                {
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id">ערוך פרטי סניף</a> | 
                        <a asp-action="Delete" asp-route-id="@item.Id">מחיקת סניף מהרשימה</a>
                    </div>
                }
            </div>

        }
    </div>
</div>