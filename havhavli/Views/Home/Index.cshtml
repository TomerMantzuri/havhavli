@{
    ViewData["Title"] = "הב-הב לי";
}

<div class="text-center">
    <h1 class="display-4">ברוכים הבאים לחנות הב-הב לי</h1>
    <p>חנות המוצרים לבעלי חיים המובילה בישראל</p>
</div>

<body>
    <main>

        <div class="container">
            <div class="row">
                <div class="col-3">
                    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/pics/dog.jpeg" />
                                <div class="carousel-caption d-none d-md-block" onclick="window.location.href = 'https://localhost:44311/Products';">
                                    <button class="sliderUpperMiddle btn" id="sliderBtn" type="button">
                                        <h3>כלבים</h3>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/pics/cat.jpeg" />
                                <div class="carousel-caption d-none d-md-block" onclick="window.location.href = 'https://localhost:44311/Products';">
                                    <button class="sliderUpperMiddle btn" id="sliderBtn" type="button">
                                        <h3>חתולים</h3>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div id="myCarousel" class="carousel slide w-auto" data-bs-ride="carousel">
