@model havhavli.Models.ProductImage

@{
    ViewData["Title"] = "הוספת תמונה למוצר";
}

<h1 class="text-center">שיוך תמונה למוצר</h1>

<h4 class="text-danger" style="text-align:center">חובה להוסיף תמונה על מנת שהמוצר יופיע בחנות</h4>
<hr />
<div class="row">
    <div class="col-md-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class ="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Imge" class="control-label"></label>
                <input asp-for="Imge" class="form-control"  autocomplete="off"  />
                <span asp-validation-for="Imge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="שיוך תמונה למוצר" class="btn btn-primary" />
                <a asp-controller="Products" asp-action="Index">חזור למוצרים</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
